<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
    <xacro:include filename="$(find fishbot_description)/urdf/fishbot/common_intertia.urdf.xacro"/>
    <xacro:macro name="wheel_xacro" params="wheel_name xyz">
        <!-- 机器人的惯性测量单元 -->
        <link name="${wheel_name}_link">
            <!-- 部件的外观描述 -->
            <visual>
                <origin xyz="0.0 0.0 0.0" rpy="1.57079 0.0 0.0"/>
                <geometry>
                    <cylinder radius="0.032" length="0.04"/>
                </geometry>
                <!-- 材质 颜色 -->
                <material name="yellow">
                    <color rgba="1.0 1.0 0.0 1.0"/>
                </material>
            </visual>
            <collision>
                <origin xyz="0.0 0.0 0.0" rpy="1.57079 0.0 0.0"/>
                <geometry>
                    <cylinder radius="0.032" length="0.04"/>
                </geometry>
                <!-- 材质 颜色 -->
                <material name="yellow">
                    <color rgba="1.0 1.0 0.0 1.0"/>
                </material>
            </collision>
            <xacro:cylinder_intertia m="0.5" r="0.032" h="0.04"/>
        </link>
        <!-- 机器人的关节 用于组合机器人的部件-->
        <joint name="${wheel_name}_joint" type="continuous">
            <!-- 关节的父部件 -->
            <parent link="base_link"/>
            <!-- 关节的子部件 -->
            <child link="${wheel_name}_link"/>
            <!-- 关节的位置和旋转 -->
            <origin xyz="${xyz}" rpy="0.0 0.0 0.0"/>
            <axis xyz="0 1 0"/>
        </joint>
    </xacro:macro>
</robot>
